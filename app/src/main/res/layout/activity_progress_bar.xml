<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="marc.com.definitionview.Ui.ProgressBarActivity">
    <marc.com.customview.CView.ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:innerBackground="@color/colorAccent"
        app:outterBackground="@color/colorPrimary"
        app:roundWidth="5dp"
        app:progressTextSize="20sp"
        app:progressTextColor="@color/colorAccent"/>
</RelativeLayout>
