<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorTextView">
        <attr name="originColor" format="color"/>
        <attr name="changeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="MarcTextSize" format="dimension"/>
        <attr name="MarcTextColor" format="color"/>
        <attr name="MartText" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="StepView">
        <attr name="circleWidth" format="dimension"/>
        <attr name="outerColor" format="color"/>
        <attr name="innerColor" format="color"/>
        <attr name="svTextSize" format="dimension"/>
        <attr name="svTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="selectColor" format="color"/>
        <attr name="nselectColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="indicatorTextColor" format="color"/>
        <attr name="indicatorTextSize" format="dimension"/>
        <attr name="indicatorRadius" format="dimension"/>
        <attr name="indicatorSpace" format="dimension"/>
        <attr name="fill_mode">
            <enum name="none" value="0"></enum>
            <enum name="number" value="1"></enum>
            <enum name="letter" value="2"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"/>
        <attr name="max_select" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="innerBackground" format="color"/>
        <attr name="outterBackground" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressTextColor" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="RatingBar">
        <attr name="starNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="gradeNumber" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LetterSlideBar">
        <attr name="letterSize" format="dimension"/>
        <attr name="letterNormalColor" format="color"/>
        <attr name="letterSelectColor" format="color"/>
    </declare-styleable>
</resources>